@{
    Layout = null;
    @model List<BookDeliveryCore.Orders>

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">

<!-- DataTables JavaScript -->
<script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>

<div class="row" style="max-width: 100%; padding: 15px;">
    <div class="col-md-12 col-sm-12">
        @if (Model == null || Model.Count == 0)
        {
            <p>No orders available.</p>
        }
        else
        {
            <div>
                <table id="OrdersTable" class="table table-condensed table-hover" style="width: 100%">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Client Username</th>
                            <th scope="col">Client First Name</th>
                            <th scope="col">Client Last Name</th>
                            <th scope="col">Client Phone Number</th>
                            <th scope="col">Client Address</th>
                            <th scope="col">Order City</th>
                            <th scope="col">Client Postal Code</th>
                            <th scope="col">Delivery Agency</th>
                            <th scope="col">Courier Username</th>
                            <th scope="col">Courier First Name</th>
                            <th scope="col">Courier Last Name</th>
                            <th scope="col">Courier Phone Number</th>
                            <th scope="col">Status</th>
                            <th scope="col">Created Date</th>
                            <th scope="col">Dispatched Date</th>
                            <th scope="col">Estimated Date</th>
                            <th scope="col">Delivered Date</th>
                            <th scope="col">Review</th>
                            <th scope="col">Review Comments</th>
                            <th scope="col">GetOrder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.ORDER_ID</td>
                                <td>@order.CLIENT_USERNAME</td>
                                <td>@order.CLIENT_FIRSTNAME</td>
                                <td>@order.CLIENT_LASTNAME</td>
                                <td>@order.CLIENT_PHONE</td>
                                <td>@order.CLIENT_ADDRESS</td>
                                <td>@order.CLIENT_CITY</td>
                                <td>@order.CLIENT_POSTALCODE</td>
                                <td>@order.AGENCY_NAME</td>
                                <td>@order.COURIER_USERNAME</td>
                                <td>@order.COURIER_FIRSTNAME</td>
                                <td>@order.COURIER_LASTNAME</td>
                                <td>@order.COURIER_PHONE</td>
                                <td>@order.STATUS</td>
                                <td>@order.ORDERDATE</td>
                                <td>@order.DISPATCHDATE</td>
                                <td>@order.ESTIMATE_DT</td>
                                <td>@order.DELIVEREDDATE</td>
                                <td>@order.REVIEW</td>
                                <td>@order.REVIEW_COMMENTS</td>
                                <td>
                                    <button onclick="ViewOrder(this)">
                                        <i class="fa fa-magic" aria-hidden="true"></i>

                                    </button>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="viewOrderModal" tabindex="-1" aria-labelledby="viewOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewOrderModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="orderID" class="form-label">OrderID</label>
                        <input type="text" class="form-control" id="orderID" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="agencyname" class="form-label">Delivery Agency</label>
                        <input type="text" class="form-control" id="agencyname" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="clientFirstName" class="form-label">Client First Name</label>
                        <input type="text" class="form-control" id="clientFirstName" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="clientLastName" class="form-label">Client Last Name</label>
                        <input type="text" class="form-control" id="clientLastName" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" id="city" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Delivery Address</label>
                        <input type="text" class="form-control" id="address" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="postal" class="form-label">Postal Code</label>
                        <input type="text" class="form-control" id="postal" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Client Phone Number</label>
                        <input type="text" class="form-control" id="phone" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="orderdt" class="form-label">Created Date</label>
                        <input type="text" class="form-control" id="orderdt" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="eddt" class="form-label">Estimated Delivery Date</label>
                        <input type="date" class="form-control" id="eddt">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveChanges()">Accept Order</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#OrdersTable').DataTable({
            paging: true,
            pagingType: 'simple_numbers',
            searching: false,
            pageLength: 15,
            dom: 'frtip',
            language: {
                thousands: ",",
                decimal: "."
            },
            responsive: false,
            scrollX: true,
            columnDefs: [
                { className: 'dt-body-left', targets: '_all' }
            ]
        });
    });

    function ViewOrder(button) {
        var row = button.parentNode.parentNode; // Get the row
        var cells = row.getElementsByTagName("td");
        var orderData = {
            orderid: cells[0].innerText,
            clusername: cells[1].innerText,
            clfirstname: cells[2].innerText,
            cllastname: cells[3].innerText,
            clphone: cells[4].innerText,
            claddress: cells[5].innerText,
            clcity: cells[6].innerText,
            clpostalcode: cells[7].innerText,
            agencyname: cells[8].innerText,
            crusername: cells[9].innerText,
            crfirstname: cells[10].innerText,
            crlastname: cells[11].innerText,
            crphone: cells[12].innerText,
            status: cells[13].innerText,
            orderdt: cells[14].innerText,
            dispdt: cells[15].innerText,
            eddt: cells[16].innerText,
            deldt: cells[17].innerText,
            rev: cells[18].innerText,
            revwc: cells[19].innerText
        };

        console.log(orderData);
        editOrderModal(orderData)
    }

    function editOrderModal(orderData) {
        $('#viewOrderModalLabel').text("Order -" + orderData.orderid);

        $('#orderID').val(orderData.orderid);
        $('#agencyname').val(orderData.agencyname);
        $('#clientFirstName').val(orderData.clfirstname);
        $('#clientLastName').val(orderData.cllastname);
        $('#city').val(orderData.clcity);
        $('#address').val(orderData.claddress);
        $('#postal').val(orderData.clpostalcode);
        $('#phone').val(orderData.clphone);
        $('#orderdt').val(orderData.orderdt);
        $('#eddt').val(orderData.eddt);

        if (orderData.review >= 5) {
            $('#review').next('.input-group-text').find('i').addClass('text-warning');

        }
        else {
            $('#review').next('.input-group-text').find('i').addClass('"fa fa-star-half-o"');
        }


        $('#viewOrderModal').modal('show');
    }

    function saveChanges() {
        console.log($('#orderID').val());
        $.ajax({
            type: "POST",
            url: "@Url.Action("AcceptOrderCourier", "Courier")",
            contentType: "application/json; charset=utf-8",

            // Pass only the 'username' parameter
            data: JSON.stringify({ 'OrderID': $('#orderID').val(), 'EDD': $('#eddt').val() }),
            async: false,
            success: function (response) {
                console.log(response); // Add this line for logging
                location.reload();
            },
            error: function (xhr, status, error) {
                alert(error);
            }
        });

        // Close modal after saving changes
        $('#viewOrderModal').modal('hide');
        //TODO FIX LATER
        //window.location.href = '@Url.Action("AdminModule", "Menu", new { select = "ADMI" })';

    }


</script>