@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


<main class="content-wrapper">
    <div class="content">
        <div class="form-label">
            <h1>Admin Module</h1>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <div class="col-md-4">
                    <label>User Type</label>
                    <select id="userType" tabindex="-1" class="form-control form-select" aria-hidden="true" style="width:100%" onchange="GetUsers($('#userType').selectedValue())">
                            <option value="ADMI">ADMIN</option>
                            <option value="COUR">COURIER</option>
                            <option value="CLIE">CLIENT</option>
                    </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
                <div id="UserResult"></div>
            </div>
        </div>

    </div>
</main>

<script>
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("SearchClients","Admin")",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({}),
            async: true,
            success: function (response) {
                $('#UserResult').html(response);
            },
            error: function (xhr, status, error) {
                alert(error);
            }
        });
    });
</script>
