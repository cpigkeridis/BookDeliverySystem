@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<head>
    <link href="~/css/GlobalStyleSheet.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<div class="form-container">
    <div class="col-md-3">
        <div class="contact-info">
            <img src="\welcome-back-dude.png" class="small-image" />
            <br/>
            <br/>
            <h2>Welcome Back</h2>   
            <h3>Login to your Account!</h3>
        </div>
    </div>
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="align-content-center">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        @Html.ValidationMessage("CustomError", new { @class = "text-warnings" })
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Login</button>
                    
                </div>
                <div class="Options">
                    <p class="option">
                        <a id="option" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p class="option">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p class="option">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .text-warnings {
        color: red; /* Adjust color as needed */
        font-weight: bold;
    }
</style>
